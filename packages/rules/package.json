{
	"name": "@viewlint/rules",
	"version": "1.0.0",
	"description": "Built-in web rule set for ViewLint",
	"type": "module",
	"exports": {
		"types": "./dist/index.d.ts",
		"default": "./dist/index.js"
	},
	"files": [
		"dist",
		"README.md",
		"LICENSE"
	],
	"publishConfig": {
		"access": "public"
	},
	"dependencies": {
		"sharp": "^0.34.5",
		"viewlint": "^0.0.1"
	},
	"devDependencies": {
		"@repo/typescript-config": "workspace:*",
		"typescript": "5.9.2",
		"vitest": "3.2.4",
		"viewlint": "workspace:*"
	},
	"scripts": {
		"build": "node -e \"require('node:fs').rmSync('dist', { recursive: true, force: true })\" && tsc -p tsconfig.build.json",
		"test": "node ../viewlint/scripts/ensure-playwright-browser.mjs && vitest run --passWithNoTests",
		"test:watch": "node ../viewlint/scripts/ensure-playwright-browser.mjs && vitest --watch",
		"lint": "biome check .",
		"typecheck": "tsc --noEmit",
		"check-types": "tsc --noEmit",
		"prepack": "npm run build"
	},
	"author": "EvanZhouDev",
	"license": "AGPL-3.0-only",
	"bugs": {
		"url": "https://github.com/EvanZhouDev/viewlint/issues"
	},
	"homepage": "https://viewlint.vercel.app/",
	"keywords": [
		"ui",
		"lint",
		"mcp",
		"ai"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/EvanZhouDev/viewlint.git"
	}
}
