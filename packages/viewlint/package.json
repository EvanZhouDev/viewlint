{
	"name": "viewlint",
	"version": "1.0.0",
	"description": "Find UI issues on live websites.",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/src/index.d.ts",
			"default": "./dist/src/index.js"
		},
		"./config": {
			"types": "./dist/config/index.d.ts",
			"default": "./dist/config/index.js"
		},
		"./plugin": {
			"types": "./dist/plugin/index.d.ts",
			"default": "./dist/plugin/index.js"
		}
	},
	"bin": {
		"viewlint": "dist/bin/viewlint.js"
	},
	"files": [
		"dist",
		"README.md",
		"LICENSE"
	],
	"dependencies": {
		"@types/cross-spawn": "^6.0.6",
		"biome-plugin-no-type-assertion": "^1.0.2",
		"chalk": "^5.6.2",
		"commander": "^14.0.2",
		"cross-spawn": "^7.0.6",
		"debug": "^4.4.3",
		"playwright": "^1.57.0",
		"zod": "^4.3.5"
	},
	"devDependencies": {
		"@repo/typescript-config": "workspace:*",
		"typescript": "5.9.2",
		"vitest": "3.2.4"
	},
	"scripts": {
		"build": "node -e \"require('node:fs').rmSync('dist', { recursive: true, force: true })\" && tsc -p tsconfig.build.json && node -e \"require('node:fs').mkdirSync('dist/src/vendor', { recursive: true }); require('node:fs').copyFileSync('src/vendor/medv.finder.js', 'dist/src/vendor/medv.finder.js'); require('node:fs').chmodSync('dist/bin/viewlint.js', 0o755)\"",
		"test": "node ./scripts/ensure-playwright-browser.mjs && vitest run",
		"test:watch": "node ./scripts/ensure-playwright-browser.mjs && vitest --watch",
		"lint": "biome check .",
		"typecheck": "tsc --noEmit",
		"check-types": "tsc --noEmit",
		"prepack": "npm run build"
	},
	"author": "EvanZhouDev",
	"license": "AGPL-3.0-only",
	"bugs": {
		"url": "https://github.com/EvanZhouDev/viewlint/issues"
	},
	"homepage": "https://viewlint.vercel.app/",
	"keywords": [
		"ui",
		"lint",
		"mcp",
		"ai"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/EvanZhouDev/viewlint.git"
	}
}
