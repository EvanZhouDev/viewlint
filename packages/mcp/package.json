{
	"name": "@viewlint/mcp",
	"version": "0.0.2",
	"description": "MCP server for ViewLint",
	"type": "module",
	"bin": {
		"viewlint-mcp": "dist/mcp-cli.js"
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"default": "./dist/index.js"
		},
		"./mcp-server": {
			"types": "./dist/mcp-server.d.ts",
			"default": "./dist/mcp-server.js"
		}
	},
	"files": [
		"dist",
		"README.md",
		"LICENSE"
	],
	"publishConfig": {
		"access": "public"
	},
	"dependencies": {
		"@modelcontextprotocol/sdk": "^1.24.1",
		"viewlint": "^0.0.1",
		"zod": "^4.3.5"
	},
	"devDependencies": {
		"@repo/typescript-config": "workspace:*",
		"typescript": "5.9.2",
		"vitest": "3.2.4",
		"viewlint": "workspace:*"
	},
	"scripts": {
		"build": "node -e \"require('node:fs').rmSync('dist', { recursive: true, force: true })\" && tsc -p tsconfig.build.json && node -e \"require('node:fs').chmodSync('dist/mcp-cli.js', 0o755)\"",
		"test": "vitest run --passWithNoTests",
		"check-types": "tsc --noEmit",
		"prepack": "npm run build"
	},
	"author": "EvanZhouDev",
	"license": "AGPL-3.0-only",
	"bugs": {
		"url": "https://github.com/EvanZhouDev/viewlint/issues"
	},
	"homepage": "https://viewlint.vercel.app/",
	"keywords": [
		"ui",
		"lint",
		"mcp",
		"ai"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/EvanZhouDev/viewlint.git"
	}
}
